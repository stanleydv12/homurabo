{
  "namespace": "homurabu",
  "helm": [
    {
      "name": "prometheus-operator",
      "repository": "https://prometheus-community.github.io/helm-charts",
      "chart": "kube-prometheus-stack",
      "values": [
        {
          "name": "alertmanager.ingress.enabled",
          "value": "true"
        },
        {
          "name": "grafana.ingress.enabled",
          "value": "true"
        },
        {
          "name": "prometheus.ingress.enabled",
          "value": "true"
        },
        {
          "name": "thanosRuler.ingress.enabled",
          "value": "true"
        },
        {
          "name": "alertmanager.ingress.hosts[0]",
          "value": "alertmanager.homurabu.lab"
        },
        {
          "name": "grafana.ingress.hosts[0]",
          "value": "grafana.homurabu.lab"
        },
        {
          "name": "prometheus.ingress.hosts[0]",
          "value": "prometheus.homurabu.lab"
        },
        {
          "name": "thanosRuler.ingress.hosts[0]",
          "value": "thanosruler.homurabu.lab"
        }
      ]
    },
    {
      "name": "harbor",
      "repository": "https://helm.goharbor.io",
      "chart": "harbor",
      "values": [
        {
          "name": "expose.ingress.hosts.core",
          "value": "harbor.homurabu.lab"
        },
        {
          "name": "metrics.enabled",
          "value": "true"
        },
        {
          "name": "metrics.serviceMonitor.enabled",
          "value": "true"
        },
        {
          "name": "metrics.serviceMonitor.additionalLabels.release",
          "value": "prometheus-operator"
        }
      ]
    } 
  ]
}
